@model SicWEB.Models.Correio

@{
  ViewData["Title"] = "Create";
}

<div class="container-fluid border rounded bg-branco">

  <div class="container-fluid pb-3">

    <h5 class="font-weight-bold pt-3 pb-1">Cadastro de Correios</h5>

    <hr />
    <form asp-action="Create">
      <input type="hidden" asp-for="Remetente" value="@ViewBag.NomeUser" />
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-row">

        <div class="form-group col-md-3">
          <label asp-for="Status" class="control-label"></label>
          <select asp-for="Status" class="browser-default custom-select" required>
            <option></option>
            <option value="Aprovado">Aprovado</option>
            <option value="Atrasado">Atrasado</option>
            <option value="Cadastrado">Cadastrado</option>
            <option value="Enviado">Enviado</option>
            <option value="Recebido">Recebido</option>
          </select>
          <small class="form-text text-muted">Status do correio</small>
          <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
          <label asp-for="Tipo" class="control-label"></label>
          <select asp-for="Tipo" class="browser-default custom-select" required>
            <option></option>
            <option value="AR">AR</option>
            <option value="Azul">Azul</option>
            <option value="Carta">Carta</option>
            <option value="Sedex">Sedex</option>
          </select>
          <small class="form-text text-muted">Tipo do correio</small>
          <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
          <label asp-for="Remetente" class="control-label"></label>
          <input asp-for="Remetente" class="form-control" value="@ViewBag.NomeUser" readonly />
          <small class="form-text text-muted">Remetente do correio</small>
          <span asp-validation-for="Remetente" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
          <label asp-for="Setor" class="control-label"></label>
          <input asp-for="Setor" class="form-control" value="@ViewBag.SetorUser" readonly />
          <small class="form-text text-muted">Setor do correio</small>
          <span asp-validation-for="Setor" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
          <label asp-for="Destinatario" class="control-label"></label>
          <input asp-for="Destinatario" class="form-control" onkeyup="this.value = this.value.toUpperCase();" />
          <small class="form-text text-muted">Destinatario do correio</small>
          <span asp-validation-for="Destinatario" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
          <label asp-for="Cidade" class="control-label"></label>
          <input asp-for="Cidade" class="form-control" onkeyup="this.value = this.value.toUpperCase();" />
          <small class="form-text text-muted">Cidade de destino do correio</small>
          <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Atualizacao" class="form-control" value="@ViewBag.NomeUser" />

      </div>

      <div class="form-group ml-n2">
        <button type="submit" class="btn btn-sm btn-redondo btn-dark-green">Cadastrar</button> |
        <a class="btn btn-sm btn-redondo btn-outline-elegant" asp-action="Index"><i class="fas fa-undo-alt"></i> Voltar para a Lista</a>
      </div>
    </form>
  </div>
</div>


